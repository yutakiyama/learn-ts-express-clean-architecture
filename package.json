{
  "name": "ts-express-base",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "main": "src/infrastructure/server.ts",
  "scripts": {
    "dev": "ts-node -r dotenv/config -r tsconfig-paths/register src/infrastructure/server.ts",
    "dev:watch": "ts-node-dev -r dotenv/config -r tsconfig-paths/register src/infrastructure/server.ts --respawn src/infrastructure/server.ts",
    "clean": "rimraf dist/*",
    "tsc": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "build": "npm-run-all clean tsc",
    "start": "node .",
    "check-types": "tsc --noEmit",
    "eslint": "eslint src/**/*.ts",
    "eslint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "lint": "npm-run-all eslint check-types",
    "lint:fix": "npm-run-all eslint:fix check-types format"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,json}": "prettier --write",
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@types/mysql": "^2.15.18",
    "@types/uuid": "^8.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mysql": "^2.18.1",
    "npm-run-all": "^4.1.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "8.1.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.49.0",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsc-alias": "^1.2.9",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  }
}
